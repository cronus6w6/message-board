{
    "compilerOptions": {
        "outDir": "./dst",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "module": "commonjs",
        "lib": [
            "es2017"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}